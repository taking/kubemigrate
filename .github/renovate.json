{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": ["gomod"],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "groupName": "all go modules",
      "schedule": ["before 3am on sunday"]
    },
    {
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "go minor/patch updates",
      "automerge": true
    },
    {
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["major"],
      "groupName": "go major updates",
      "automerge": false
    },
    {
      "matchPackageNames": [
        "github.com/vmware-tanzu/velero"
      ],
      "enabled": false,
      "description": "Pin Velero to v1.17.0 - do not auto-update"
    }
  ]
}
