meta {
  name: 2_minio 버킷 존재 확인
  type: http
  seq: 2
}

post {
  url: {{host_ip}}:{{host_port}}/api/v1/minio/bucket/exists?bucket=velero
  body: json
  auth: inherit
}

body:json {
  {
      "endpoint": "{{minio_url}}",
      "accessKeyID": "{{minio_accesskey}}",
      "secretAccessKey": "{{minio_secretkey}}",
      "useSSL": false
  }
}

settings {
  encodeUrl: true
}
