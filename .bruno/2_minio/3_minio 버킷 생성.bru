  auth: inherit
}

body:json {
  {
      "endpoint": "{{minio_url}}",
      "accessKeyID": "{{minio_accesskey}}",
      "secretAccessKey": "{{minio_secretkey}}",
      "useSSL": false
  }
}

settings {
  encodeUrl: true
}
