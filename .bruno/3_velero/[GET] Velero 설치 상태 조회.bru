meta {
  name: 8_Velero 설치 상태 조회
  type: http
  seq: 8
}

get {
  url: {{host_ip}}:{{host_port}}/api/v1/velero/status/{{jobId}}
  body: json
  auth: inherit
}

body:json {
  {
    "kubeconfig": {
      "kubeconfig": "{{base64_local_kubeconfig}}"
    },
    "minio": {
      "endpoint": "{{minio_url}}",
      "accessKey": "{{minio_accesskey}}",
      "secretKey": "{{minio_secretkey}}",
      "useSSL": false
    }
  }
}

settings {
  encodeUrl: true
}
